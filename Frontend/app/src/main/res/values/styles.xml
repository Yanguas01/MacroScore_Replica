<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FormTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="android:gravity">center_vertical</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColorHint">@color/secondaryDark</item>
        <item name="boxStrokeColor">@color/secondary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <style name="DropdownMenuLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:gravity">center_vertical</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColorHint">@color/secondaryDark</item>
        <item name="boxStrokeColor">@color/secondary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <style name="FormEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="FormAutocompleteTextView" parent="ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox.Dense">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

</resources>