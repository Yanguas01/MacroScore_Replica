<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_graph"
    app:startDestination="@id/signupFragment">

    <fragment
        android:id="@+id/signupFragment"
        android:name="es.upm.macroscore.presentation.auth.signup.SignUpFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signUpFragment_to_profileFormFragment"
            app:destination="@id/profileFormFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_logInFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFormFragment"
        android:name="es.upm.macroscore.presentation.auth.signup.ProfileFormFragment"
        android:label="fragment_profile_form"
        tools:layout="@layout/fragment_profile_form" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="es.upm.macroscore.presentation.auth.login.LogInFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_logInFragment_to_signUpFragment"
            app:destination="@id/signupFragment" />
    </fragment>
</navigation>